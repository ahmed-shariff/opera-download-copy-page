{
    "manifest_version": 2,

    "developer" : {
	"name" : "Ahmed Shariff",
	"url" : "https://github.com/ahmed-shariff"
    },
    
    "name": "download copy path",
    "description": "Download file and copy saved file name",
    "version": "1.1",
    "background": {
	"scripts": ["background.js"]
    },

    "permissions": ["tabs", "activeTab", "downloads", "contentSettings", "<all_urls>"],
    "browser_action": {
	"default_icon": "icon.png",
	"default_title": "download copy path"
    },

    "commands": {
	"download-copy": {
	    "suggested_key": {
		"default": "Ctrl+Shift+D",
		"mac": "Command+Shift+D"
	    },
	    "description": "Copy downloaded pdf file name"
	}
    }
}
