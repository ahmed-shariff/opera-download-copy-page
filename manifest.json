{
  "manifest_version": 3,

  "developer" : {
	  "name" : "Shariff Faleel",
	  "url" : "https://shariff-faleel.com"
  },
  
  "name": "download copy path",
  "description": "Download file and copy saved file name",
  "version": "1.1",
  "background": {
	  "service_worker": "background.js"
  },

  "permissions": ["tabs", "activeTab", "downloads", "contentSettings", "scripting"],
  "action": {
	   "default_icon": "icon.png",
	   "default_title": "download copy path"
  },

  "commands": {
	  "_execute_action": {
	    "suggested_key": {
		    "default": "Ctrl+Shift+D",
		    "mac": "Command+Shift+D"
	    },
	    "description": "Copy downloaded pdf file name"
	  }
  }
}
